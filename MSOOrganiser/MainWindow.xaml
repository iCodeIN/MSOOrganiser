<Window x:Class="MSOOrganiser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mind Sports Olympiad" Height="800" Width="960"
        Icon="/MSOOrganiser;component/Resources/Logo.png"
        Closing="window_Closing">
    <Grid>
        <DockPanel x:Name="dockPanel">
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_File">
                    <MenuItem Header="Change Password" Click="changePasswordMenuItem_Click"/>
                    <MenuItem Header="_Exit" Click="exitMenuItem_Click"/>
                </MenuItem>
                <MenuItem Header="Olympiads" Click="olympiadsMenuItem_Click"/>
                <MenuItem Header="Games" Click="gamesMenuItem_Click"/>
                <MenuItem Header="Competitors" Click="competitorsMenuItem_Click"/>
                <MenuItem Header="Events" IsEnabled="False"/>
                <MenuItem Header="Results">
                    <MenuItem Header="Display results" Click="displayResultsMenuItem_Click"/>
                    <MenuItem Header="Edit Results" Click="resultsMenuItem_Click" />
                </MenuItem>
                <MenuItem Header="Reports">
                    <MenuItem Header="Bulk Receipts" IsEnabled="False"/>
                    <MenuItem Header="View Max Fee / Penta Cards" IsEnabled="False"/>
                    <MenuItem Header="Bulk Max Fee" IsEnabled="False"/>
                    <MenuItem Header="Contacts" Click="contactsMenuItem_Click"/>
                    <MenuItem Header="View Game Plan" IsEnabled="False"/>
                    <MenuItem Header="Sign In Sheets" IsEnabled="False"/>
                    <MenuItem Header="Parking Lists" Click="parkingListsMenuItem_Click" />
                    <MenuItem Header="Logistics Report" IsEnabled="False"/>
                    <MenuItem Header="View Traffic Report" IsEnabled="False"/>
                    <MenuItem Header="View Location Use" IsEnabled="False"/>
                    <MenuItem Header="Banking" IsEnabled="False"/>
                    <MenuItem Header="Print Donations" IsEnabled="False"/>
                    <MenuItem Header="Non-Event Income" IsEnabled="False"/>
                    <MenuItem Header="Event Income" IsEnabled="False"/>
                    <MenuItem Header="View Nationalities" Click="nationalitiesMenuItem_Click" />
                    <MenuItem Header="Print Event Entries" Click="printEventEntriesMenuItem_Click" />
                    <MenuItem Header="Entry Summary" Click="entrySummaryMenuItem_Click"/>
                    <MenuItem Header="Print a Day's Report" IsEnabled="False"/>
                    <MenuItem Header="Print Today's Events" IsEnabled="False"/>
                    <MenuItem Header="Print Today's Event By Game" IsEnabled="False"/>
                    <MenuItem Header="View Medal Forms" IsEnabled="False"/>
                    <MenuItem Header="Print Named Pairing Card for an Event" IsEnabled="False"/>
                    <MenuItem Header="View Pentamind Qualifiers" IsEnabled="False"/>
                    <MenuItem Header="Print Medal Table" IsEnabled="False"/>
                    <MenuItem Header="Print Results" IsEnabled="False"/>
                </MenuItem>
                <MenuItem Header="Misc">
                    <MenuItem Header="Print Misc Badges" IsEnabled="False"/>
                </MenuItem>
            </Menu>
            <StatusBar DockPanel.Dock="Bottom">
                <StatusBar.ItemsPanel>
                    <ItemsPanelTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200" />
                                <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                    </Grid>
                    </ItemsPanelTemplate>
                </StatusBar.ItemsPanel>
                <StatusBarItem Grid.Column="0">
                    <TextBlock Name="Status" />
                </StatusBarItem>
                <Separator Grid.Column ="1" />
            </StatusBar>
            <StackPanel></StackPanel>
        </DockPanel>
    </Grid>
</Window>
