<Window x:Class="MSOOrganiser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mind Sports Olympiad" Height="800" Width="960"
        Icon="/MSOOrganiser;component/Resources/Logo.png">
    <Grid>
        <DockPanel x:Name="dockPanel">
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_File">
                    <MenuItem Header="_Exit" Click="exitMenuItem_Click"/>
                </MenuItem>
                <MenuItem Header="Olympiads" Click="olympiadsMenuItem_Click"/>
                <MenuItem Header="Games" Click="gamesMenuItem_Click"/>
                <MenuItem Header="Competitors" Click="competitorsMenuItem_Click"/>
                <MenuItem Header="Events"/>
                <MenuItem Header="Results">
                    <MenuItem Header="Display results" Click="displayResultsMenuItem_Click"/>
                    <MenuItem Header="Edit Results" Click="resultsMenuItem_Click" />
                </MenuItem>
                <MenuItem Header="Reports">
                    <MenuItem Header="Bulk Receipts"/>
                    <MenuItem Header="View Max Fee / Penta Cards"/>
                    <MenuItem Header="Bulk Max Fee"/>
                    <MenuItem Header="View Contacts"/>
                    <MenuItem Header="View Game Plan"/>
                    <MenuItem Header="Sign In Sheets"/>
                    <MenuItem Header="Parking Lists"/>
                    <MenuItem Header="Logistics Report"/>
                    <MenuItem Header="View Traffic Report"/>
                    <MenuItem Header="View Location Use"/>
                    <MenuItem Header="Banking"/>
                    <MenuItem Header="Print Donations"/>
                    <MenuItem Header="Non-Event Income"/>
                    <MenuItem Header="Event Income"/>
                    <MenuItem Header="View Nationalities" Click="nationalitiesMenuItem_Click"/>
                    <MenuItem Header="Print Event Entries"/>
                    <MenuItem Header="Entry Summary"/>
                    <MenuItem Header="Print a Day's Report"/>
                    <MenuItem Header="Print Today's Events"/>
                    <MenuItem Header="Print Today's Event By Game"/>
                    <MenuItem Header="View Medal Forms"/>
                    <MenuItem Header="Print Named Pairing Card for an Event"/>
                    <MenuItem Header="View Pentamind Qualifiers"/>
                    <MenuItem Header="Print Medal Table"/>
                    <MenuItem Header="Print Results"/>
                </MenuItem>
                <MenuItem Header="Misc">
                    <MenuItem Header="Print Misc Badges"/>
                </MenuItem>
            </Menu>
            <StatusBar DockPanel.Dock="Bottom">
                <StatusBar.ItemsPanel>
                    <ItemsPanelTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200" />
                                <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                    </Grid>
                    </ItemsPanelTemplate>
                </StatusBar.ItemsPanel>
                <StatusBarItem Grid.Column="0">
                    <TextBlock Name="Status" />
                </StatusBarItem>
                <Separator Grid.Column ="1" />
            </StatusBar>
            <StackPanel></StackPanel>
        </DockPanel>
    </Grid>
</Window>
