<Window x:Class="MSOOrganiser.PasswordChangeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MSO - Change Password" Height="200" Width="500">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <Image Source="/MSOOrganiser;component/Resources/Logo.png" />
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,16,0,0">
                    <Label Width="88">Old Password</Label>
                    <PasswordBox x:Name="oldPasswordBox" Width="160">
                    </PasswordBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <Label Width="88">New Password</Label>
                    <PasswordBox x:Name="newPasswordBox" Width="160">
                    </PasswordBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <Label Width="88">Confirm New</Label>
                    <PasswordBox x:Name="newPasswordBox2" Width="160">
                    </PasswordBox>
                </StackPanel>
                <Button x:Name="changeButton" Margin="64,10,64,0" Click="changeButton_Click">Change Password</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
