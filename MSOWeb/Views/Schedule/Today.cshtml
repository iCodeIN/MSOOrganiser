@model IList<MSOCore.Reports.ScheduleGenerator.ScheduleEventVm>
@{
    Layout = "~/Views/Shared/_NewLayout.cshtml";
    ViewBag.Title = "Mind Sports Olympiad : Schedule";
}

<h1>MSO Schedule : @DateTime.Now.ToString("dddd dd MMMM")</h1>

    <div class="row">
        <div class="col-sm-12">
            <div class="card mt-1">
                @*<div class="card-header">
                    <b>@day.Date</b>
                </div>*@
                <ul class="list-group list-group-flush">
                    @foreach (var evt in Model)
                    {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        @evt.Times : @evt.Name
                    </li>
                    }
                </ul>
            </div>
        </div>
    </div>